# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual production values

# ======================
# REQUIRED FOR PRODUCTION
# ======================

# Supabase Production Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Stripe Production Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-production-publishable-key
STRIPE_SECRET_KEY=sk_live_your-production-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# Stripe Production Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_FREELANCER=price_1234567890_freelancer_monthly
STRIPE_PRICE_ID_PROFESSIONAL=price_1234567890_professional_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_1234567890_enterprise_monthly

# Application Configuration
NEXT_PUBLIC_APP_URL=https://track-flow.app
NODE_ENV=production

# Email Service (Resend)
RESEND_API_KEY=re_live_your-production-resend-api-key

# Security
JWT_SECRET=your-ultra-secure-production-jwt-secret-minimum-32-characters-long
CRON_SECRET=your-secure-production-cron-secret-for-weekly-reports

# ======================
# OPTIONAL BUT RECOMMENDED
# ======================

# Redis for Rate Limiting (Upstash)
UPSTASH_REDIS_REST_URL=https://your-production-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-production-redis-token

# Error Monitoring (Sentry)
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=trackflow-production
SENTRY_DEBUG=false

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-YOUR-PRODUCTION-GA-ID
NEXT_PUBLIC_POSTHOG_KEY=phc_your-production-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Alerting Configuration
ALERT_EMAIL=alerts@track-flow.app
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/production/webhook
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Deployment Platform (Vercel)
VERCEL_URL=track-flow.app

# ======================
# FEATURE FLAGS
# ======================

ENABLE_REDIS_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_MONITORING=true

# ======================
# IMPORTANT NOTES
# ======================

# 1. NEVER commit this file with actual values
# 2. Use strong, unique secrets for JWT_SECRET and CRON_SECRET
# 3. Ensure Stripe webhooks are configured for your production domain
# 4. Test all integrations in staging before deploying to production
# 5. Set up proper monitoring and alerting
# 6. Configure CORS settings in Supabase for your production domain